@model SummerPracticeDB.Models.Departments

@{
    ViewData["Title"] = "Update" + Model.name;
}



<h4>Update @Model.name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="id" type="hidden" />

            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="chiefs_id" class="control-label"></label>
                <input asp-for="chiefs_id" class="form-control" />
                <span asp-validation-for="chiefs_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-primary btn-sm" /> &emsp;
                <a asp-action="Index" class="btn btn-link btn-sm">Back to List</a>
            </div>
        </form>
    </div>
</div>
