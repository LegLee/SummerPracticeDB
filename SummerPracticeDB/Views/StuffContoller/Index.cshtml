@model IEnumerable<SummerPracticeDB.Models.Stuff>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success btn-sm">Create New</a>
    <a asp-controller="StuffContoller" asp-action="SearchTab" class="btn btn-outline-info btn-sm">Search</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.id_dep)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.id_dep)
                </td>
                <td>
                    <a asp-controller="StuffContoller" asp-action="Update" asp-route-id="@item.id" class="btn btn-outline-info btn-sm">Update</a> &emsp;
                    <form asp-controller="StuffContoller" asp-action="Delete" asp-route-id="@item.id"> <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button></form>
                </td>
            </tr>

        }

        
    </tbody>
</table>
